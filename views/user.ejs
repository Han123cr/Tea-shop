<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="index.html">Tea House</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i
                class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
                    aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li><a class="dropdown-item" href="#!">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" href="http://localhost:3000/admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Quản Lý Sản Phẩm
                        </a>
                        <a class="nav-link" href="http://localhost:3000/categories">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Quản Lý Danh Mục
                        </a>
                        <a class="nav-link" href="http://localhost:3000/users">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Quản Lý Người Dùng
                        </a>
                        <a href="http://localhost:3000/">
                        <button id="waybackhome" type="button" class="btn btn-secondary">Quay về trang chủ</button>
                        </a>
            </nav>
        </div>
<!-- ----------------------------------------------------------------------------------------------------------------------------------------- -->
        <div id="layoutSidenav_content">
            <main>
                <h2 class="my3">QUẢN LÝ NGƯỜI DÙNG</h2>
            
                <!-- ----------------Start Table---------------------- -->
                <table class="table text-center align-middle">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Họ</th>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Trạng Thái</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody id="Tableproduct">
                        <% for(let u of users) { %>
                            <tr>
                                <td><%= u.id %></td>
                                <td><%= u.firstname %></td>
                                <td><%= u.lastname %></td>
                                <td><%= u.email %></td>
                                <td><%= u.trangthai %></td>
                                <td style="width: 200px;">
                                    <% if(u.trangthai == 'block'){%>
                                    <a href="http://localhost:3000/users/active/<%= u.id %>"><button class="btn btn-success"><i class="fa-solid fa-unlock"></i></button></a>
                                    <% } else { %>
                                    <a href="http://localhost:3000/users/block/<%= u.id %>"><button class="btn btn-danger"><i class="fa-solid fa-lock"></i></button></a>
                                    <%}%>
                                </td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
                <!-- ----------------End Table---------------------- -->
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; TeaHouse 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
